generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
}

model Product {
  id            String      @id @default(uuid())
  code          String
  name          String
  type          ProductType
  unit          String
  currentStock  Int
  reservedStock Int
  minStock      Int

  // Relações inversas
  stockMovements   StockMovement[]
  productionOrders ProductionOrder[]
  invoiceItems     InvoiceItem[]
  boms             BOM[]
}

enum ProductType {
  MP // Matéria Prima
  PA // Produto Acabado
}

model Invoice {
  id       String        @id @default(uuid())
  type     InvoiceType
  number   String
  date     DateTime
  supplier String?
  customer String?
  items    InvoiceItem[]
  status   InvoiceStatus
}

model InvoiceItem {
  id        String  @id @default(uuid())
  invoiceId String
  productId String
  quantity  Float
  value     Float
  invoice   Invoice @relation(fields: [invoiceId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
}

enum InvoiceType {
  entrada
  saida
}

enum InvoiceStatus {
  processada
  pendente
  erro
}

model StockMovement {
  id        String       @id @default(uuid())
  productId String
  product   Product      @relation(fields: [productId], references: [id])
  type      MovementType
  quantity  Float
  date      DateTime     @default(now())
  orderId   String?
  notes     String?
}

enum MovementType {
  entrada
  saida
  producao
  consumo
}

model BOM {
  id        String    @id @default(uuid())
  productId String
  product   Product   @relation(fields: [productId], references: [id])
  items     BOMItem[]
}

model BOMItem {
  id         String @id @default(uuid())
  bomId      String
  materialId String
  quantity   Float
  bom        BOM    @relation(fields: [bomId], references: [id])
}

model ProductionOrder {
  id          String                @id @default(uuid())
  productId   String
  product     Product               @relation(fields: [productId], references: [id])
  quantity    Float
  status      ProductionOrderStatus
  createdAt   DateTime              @default(now())
  startedAt   DateTime?
  completedAt DateTime?
  produced    Float
}

enum ProductionOrderStatus {
  planejada
  em_producao
  pausada
  concluida
  cancelada
}
